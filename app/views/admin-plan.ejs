<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="../css/admin.css">
  <%- include('partials/head.ejs'); %>
</head>

<body>
  <div class="content">
    <div class="container">
      <h2 class="mb-5">Planes</h2>
      <div class="table-responsive">
        <table class="table table-striped user-table">
          <thead>
            <tr>
              <th scope="col">Codigo</th>
              <th scope="col">Nombre</th>
              <th scope="col">Descripcion</th>
              <th scope="col">Telefono</th>
              <th scope="col" class="text-center">Estado</th>
              <th scope="col">Accion</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% plans.forEach((elements)=>{ %>

              <tr>
                <th scope="row">
                  <%= elements.COD_PLAN %>
                </th>
                <td>
                  <%= elements.NOMBRE %>
                </td>
                <td>
                  <%= elements.DESCRIPCION %>
                </td>
                <td>
                  <%= elements.TELEFONO %>
                </td>
                <td>
                  <% if(elements.ESTADO==1){ %> activo <% }else{ %> inactivo <% } %>
                </td>
                <form action="/admin/disable-plan?id=<%= elements.COD_PLAN %>&estado=<%= elements.ESTADO%>"
                  method="POST">
                  <td>
                    <% if(elements.ESTADO==1){ %>
                      <input value="Inhabilitar" class="btn btn-danger" type="submit">

                      </input>
                      <% }else{ %>
                        <input class="btn btn-success" type="submit" value="Habilitar"> </input>
                        <% } %>
                  </td>
                </form>

                <td>

<!-- //////////////////////// -->
                  <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Editar
                  </button>
                  
                  <!-- Modal -->
                  <% plans2.forEach(element => { %>
                  <div class="modal fade text-dark" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">CODIGO <%= element.COD_PLAN%></h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                           
                          <form action="guardarReceta" method="POST">
                              <div class="mb-3">
                              <label for="exampleFormControlInput1" class="form-label" name="NOMBRE">Nombre</label>
                              <input type="text" class="form-control" id="exampleFormControlInput1" name="NOMBRE" value="">
                            </div>
                            <div class="mb-3">
                              <label for="exampleFormControlTextarea1" class="form-label">Descripcion</label>
                              <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="DESCRIPCION"></textarea>
                            </div>
                            <div class="mb-3">
                              <label for="exampleFormControlTextarea1" class="form-label">Ingredientes</label>
                              <input class="form-control" id="exampleFormControlInput1" name="INGREDIENTES">
                            </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                          <button type="submit" class="btn btn-primary">Crear</button>
                        </div>
                      </form>
                    </div>
                  </div>
                  <% }) %>
                  </div>
<!-- //////////////////////// -->
                  </input>
                </td>

              </tr>

              <% }) %>
                <form id="generarForm" method="POST" action="/admin/generarPdfPlan">
                  <input type="hidden" name="datos">
                  <button class="btn btn-danger" type="submit">
                    <i>PDF</i>
                  </button>
                </form>
                <form id="generarForm" method="POST" action="/admin/generarExcelPlan">
                  <input type="hidden" name="datos">
                  <button class="btn btn-success" type="submit">
                    <i>EXCEL</i>
                  </button>
                </form>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>
</body>

</html>