<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="../css/admin.css">
  <%- include('partials/head.ejs'); %>
</head>
<body>
  <div class="content">
    <div class="container">
        <h2 class="mb-5">Recetas</h2>
        <div class="table-responsive">
            <table class="table table-striped user-table">
              <thead>
                <tr>
                  <th scope="col">Codigo</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">Descripcion</th>
                  <th scope="col">ID usuario</th>
                  <th scope="col" class="text-center">Correo</th>
                  <th scope="col" class="text-center">Accion</th>
                </tr>
              </thead>
            <tbody>
              <% recipes.forEach((elements)=>{ %>
                <form action="/admin/disable-receta?id=<%= elements.COD_RECETA %>&estado=<%= elements.ESTADO%>" method="POST">
                  <tr>
                      <th scope="row">
                          <%= elements.COD_RECETA %>
                        </th>
                    <th scope="row">
                      <%= elements.NOMBRE %>
                    </th>
                    <td>
                      <%= elements.DESCRIPCION %>
                    </td>
                    <td>
                      <%= elements.COD_USUARIO %>
                    </td>
                    <td>
                      <%= elements.CORREO %>
                    </td>
                    <td>
                      <% if(elements.ESTADO==1){ %>
                        <input value="Inhabilitar" class="btn btn-danger" type="submit">
                          
                        </input>
                        <% }else{ %>
                          <input class="btn btn-success" type="submit" value="Habilitar">  </input>
                          <% } %>
                    </td>
                  </tr>
                </form>
                <% }) %>
                <form id="generarForm" method="POST" action="/admin/generarPdfReceta">
                  <input type="hidden" name="datos">
                  <button class="btn btn-danger" type="submit">
                    <i>PDF</i>
                  </button>
                </form>
                <form id="generarForm" method="POST" action="/admin/generarExcelReceta">
                  <input type="hidden" name="datos">
                  <button class="btn btn-success" type="submit">
                    <i>Excel</i>
                  </button>
                </form>
            </tbody>
            </table>
        </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>
</body>

</html>