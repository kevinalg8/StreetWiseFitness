<!DOCTYPE html>
<html lang="en">

<%- include('partials/head.ejs'); %>
<link rel="stylesheet" href="css/footer.css">
<link rel="stylesheet" href="css/productos.css">
<title>Productos</title>
<body>
    <!-- NavBar -->
    <%- include('partials/navbar.ejs'); %>
    <%- include('partials/nav_img.ejs'); %>
    <div id="about" class="about">
        <div class="container">
            <h3><%= tienda.nickname %></h3>
            <div class="card-group cards-wrapper">
              <% produc.forEach( function (elements) { %>
                <div class="card" style="width: 20rem">
                  <img src="<%= elements.thumbnail %>" class="card-img-top" alt="...">
                  <div class="card-body">
                    <h5 class="card-title"><%= elements.title %></h5>
                    <p class="card-text"><%= elements.price %></p>
                  </div>
                  <div class="card-footer">
                    <a href="<%= elements.permalink %>" class="btn btn-primary">Comprar</a>
                  </div>
                </div>
                <%
                })
                %>
            </div>
        </div>  
    </div>
<%- include('partials/footer.ejs'); %>


</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</html>
